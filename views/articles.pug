doctype html
html
	head
		meta(charset='utf-8')
		meta(name='viewport' content='width=device-width, initial-scale=1.0')
		title The Root Vegetable
		link(href='../style.css' rel='stylesheet' type='text/css')
	body
		header
			h1 The Root Vegetagble
			h3 Your #1 reliable news source for all things West Seattle High School. 
		.navbar
			a(href='../') Home
			a(href='https://www.instagram.com/therootvegetable.wshs/') Instagram
			a(href='/compatibility.html') Compatabality
			a.active(href='/articles') Articles
		.articles
			- for (let i = 0; i < articles.length; i++)
				a.smallArticle(href= articleNames[i])
					span.artTitleSmall= articles[i].title
					img.artImgSmall(src= "../imgs/" + articles[i].mainImg)
					p= articles[i].body.substring(0, 100)
